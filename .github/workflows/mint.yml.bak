name: LinuxMint

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  test:
    runs-on: ubuntu-20.04
    
    strategy:
      fail-fast: false
      matrix:
        tag: [19.3, 20.1]

    container: linuxmintd/mint${{ matrix.tag }}-amd64

    steps:
      - run: apt -y update
      - run: apt -y install git

      - uses: actions/checkout@v2

      - run: bin/ppkg --help
      - run: bin/ppkg --version


      - run: bin/ppkg env

      - run: bin/ppkg integrate zsh

      - run: bin/ppkg update

      - run: bin/ppkg search lib
      - run: bin/ppkg search zlib

      - run: bin/ppkg info zlib
      - run: bin/ppkg info zlib version
      - run: bin/ppkg info zlib webpage
      - run: bin/ppkg info zlib

      - run: bin/ppkg depends zlib

      - run: bin/ppkg homepage
      - run: bin/ppkg homepage zlib

      - run: bin/ppkg install zlib


      - run: bin/ppkg tree zlib
      - run: bin/ppkg pack zlib

      - run: bin/ppkg formula-repo list
      - run: bin/ppkg formula view curl


      - run: bin/ppkg ls-available
      - run: bin/ppkg ls-installed
      - run: bin/ppkg ls-outdated

      - run: bin/ppkg is-available zlib
      - run: bin/ppkg is-installed zlib
      - run: bin/ppkg is-outdated zlib || echo "not outdated"

      - run: bin/ppkg uninstall zlib

      - run: bin/ppkg fetch curl

      - run: bin/ppkg upgrade @self
