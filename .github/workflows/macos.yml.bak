name: macOS

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  test:

    strategy:
      fail-fast: false
      matrix:
        version: [10.15, 11]

    runs-on: macos-${{ matrix.version }}

    steps:
      - uses: actions/checkout@v2
    
      - run: bin/ppkg --help
      - run: bin/ppkg --version

      - run: bin/ppkg env
      - run: bin/ppkg nproc -x

      - run: bin/ppkg integrate zsh

      - run: bin/ppkg update

      - run: bin/ppkg search lib
      - run: bin/ppkg search zlib

      - run: bin/ppkg info zlib
      - run: bin/ppkg info zlib version
      - run: bin/ppkg info zlib webpage
      - run: bin/ppkg info zlib

      - run: bin/ppkg depends zlib

      - run: bin/ppkg homepage
      - run: bin/ppkg homepage zlib

      - run: bin/ppkg install zlib


      - run: bin/ppkg tree zlib
      - run: bin/ppkg pack zlib

      - run: bin/ppkg formula-repo list
      - run: bin/ppkg formula view curl


      - run: bin/ppkg ls-available
      - run: bin/ppkg ls-installed
      - run: bin/ppkg ls-outdated

      - run: bin/ppkg is-available zlib
      - run: bin/ppkg is-installed zlib
      - run: bin/ppkg is-outdated zlib || echo "not outdated"

      - run: bin/ppkg uninstall zlib

      - run: bin/ppkg fetch curl

      - run: bin/ppkg upgrade @self

  install_via_install_sh:

    strategy:
      fail-fast: false
      matrix:
        version: [10.15, 11]

    runs-on: macos-${{ matrix.version }}

    steps:
      - uses: actions/checkout@v2

      - run: ./install.sh

      - run: ppkg --help
      - run: ppkg --version

      - run: ppkg env

      - run: ppkg integrate zsh

      - run: ppkg update

      - run: ppkg search lib
      - run: ppkg search zlib

      - run: ppkg info zlib
      - run: ppkg info zlib version
      - run: ppkg info zlib webpage
      - run: ppkg info zlib

      - run: ppkg depends zlib

      - run: ppkg homepage
      - run: ppkg homepage zlib

      - run: ppkg install zlib


      - run: ppkg tree zlib
      - run: ppkg pack zlib

      - run: ppkg formula-repo list
      - run: ppkg formula view curl


      - run: ppkg ls-available
      - run: ppkg ls-installed
      - run: ppkg ls-outdated

      - run: ppkg is-available zlib
      - run: ppkg is-installed zlib
      - run: ppkg is-outdated zlib || echo "not outdated"

      - run: ppkg uninstall zlib

      - run: ppkg fetch curl

      - run: ppkg upgrade @self
  install_via_homebrew:

    strategy:
      fail-fast: false
      matrix:
        version: [10.15, 11]

    runs-on: macos-${{ matrix.version }}

    steps:
      - run: brew tap leleliu008/fpliu
      - run: brew install ppkg

      - run: ppkg --help
      - run: ppkg --version

      - run: ppkg env

      - run: ppkg integrate zsh

      - run: ppkg update

      - run: ppkg search lib
      - run: ppkg search zlib

      - run: ppkg info zlib
      - run: ppkg info zlib version
      - run: ppkg info zlib webpage
      - run: ppkg info zlib

      - run: ppkg depends zlib

      - run: ppkg homepage
      - run: ppkg homepage zlib

      - run: ppkg install zlib


      - run: ppkg tree zlib
      - run: ppkg pack zlib

      - run: ppkg formula-repo list
      - run: ppkg formula view curl


      - run: ppkg ls-available
      - run: ppkg ls-installed
      - run: ppkg ls-outdated

      - run: ppkg is-available zlib
      - run: ppkg is-installed zlib
      - run: ppkg is-outdated zlib || echo "not outdated"

      - run: ppkg uninstall zlib

      - run: ppkg fetch curl

      - run: ppkg upgrade @self
