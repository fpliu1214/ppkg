name: macOS

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  test:

    strategy:
      fail-fast: false
      matrix:
        version: [10.15, 11]

    runs-on: macos-${{ matrix.version }}

    steps:
      - uses: actions/checkout@v3
    
      - run: bin/ppkg --help
      - run: bin/ppkg --version

      - run: bin/ppkg env
      - run: bin/ppkg nproc -x

      - run: bin/ppkg integrate zsh

      - run: bin/ppkg update

      - run: bin/ppkg search lib
      - run: bin/ppkg search libzip

      - run: bin/ppkg info libzip
      - run: bin/ppkg info libzip version
      - run: bin/ppkg info libzip webpage
      - run: bin/ppkg info libzip

      - run: bin/ppkg depends libzip


      - run: bin/ppkg install libzip


      - run: bin/ppkg tree libzip
      - run: bin/ppkg pack libzip tar.xz

      - run: bin/ppkg formula-repo list
      - run: bin/ppkg formula view curl


      - run: bin/ppkg ls-available
      - run: bin/ppkg ls-installed
      - run: bin/ppkg ls-outdated

      - run: bin/ppkg is-available libzip
      - run: bin/ppkg is-installed libzip
      - run: bin/ppkg is-outdated libzip || echo "not outdated"

      - run: bin/ppkg uninstall libzip

      - run: bin/ppkg fetch curl

      - run: bin/ppkg upgrade @self

  install_via_install_sh:

    strategy:
      fail-fast: false
      matrix:
        version: [10.15, 11]

    runs-on: macos-${{ matrix.version }}

    steps:
      - uses: actions/checkout@v3

      - run: ./install.sh

      - run: ppkg --help
      - run: ppkg --version

      - run: ppkg env

      - run: ppkg integrate zsh

      - run: ppkg update

      - run: ppkg search lib
      - run: ppkg search libzip

      - run: ppkg info libzip
      - run: ppkg info libzip version
      - run: ppkg info libzip webpage
      - run: ppkg info libzip

      - run: ppkg depends libzip


      - run: ppkg install libzip


      - run: ppkg tree libzip
      - run: ppkg pack libzip tar.xz

      - run: ppkg formula-repo list
      - run: ppkg formula view curl


      - run: ppkg ls-available
      - run: ppkg ls-installed
      - run: ppkg ls-outdated

      - run: ppkg is-available libzip
      - run: ppkg is-installed libzip
      - run: ppkg is-outdated libzip || echo "not outdated"

      - run: ppkg uninstall libzip

      - run: ppkg fetch curl

      - run: ppkg upgrade @self
  install_via_homebrew:

    strategy:
      fail-fast: false
      matrix:
        version: [10.15, 11]

    runs-on: macos-${{ matrix.version }}

    steps:
      - run: brew tap leleliu008/fpliu
      - run: brew install ppkg

      - run: ppkg --help
      - run: ppkg --version

      - run: ppkg env

      - run: ppkg integrate zsh

      - run: ppkg update

      - run: ppkg search lib
      - run: ppkg search libzip

      - run: ppkg info libzip
      - run: ppkg info libzip version
      - run: ppkg info libzip webpage
      - run: ppkg info libzip

      - run: ppkg depends libzip


      - run: ppkg install libzip


      - run: ppkg tree libzip
      - run: ppkg pack libzip tar.xz

      - run: ppkg formula-repo list
      - run: ppkg formula view curl


      - run: ppkg ls-available
      - run: ppkg ls-installed
      - run: ppkg ls-outdated

      - run: ppkg is-available libzip
      - run: ppkg is-installed libzip
      - run: ppkg is-outdated libzip || echo "not outdated"

      - run: ppkg uninstall libzip

      - run: ppkg fetch curl

      - run: ppkg upgrade @self
