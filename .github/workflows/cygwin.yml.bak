name: Cygwin

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  test:
    runs-on: windows-latest

    defaults:
      run:
        shell: cygwin {0}

    steps:
      - run: choco install -y cygwin
        shell: pwsh

      - run: C:\tools\cygwin\bin\bash.exe --login -i -c "sed -i 's/--login -i/--login -i %1/' /cygdrive/c/tools/cygwin/Cygwin.bat"
        shell: pwsh
   
      - run: choco install -y --source cygwin git
    
      - run: git config --global core.autocrlf input
        shell: bash

      - uses: actions/checkout@v3
    
      - run: printf 'cd %s' "$(cygpath '${{ github.workspace }}')" >> ~/.bashrc

      - run: ./ppkg --help
      - run: ./ppkg --version

      - run: ./ppkg env

      - run: command -v curl

      - run: ./ppkg integrate zsh

      - run: ./ppkg update

      - run: ./ppkg search lib
      - run: ./ppkg search base64

      - run: ./ppkg info base64
      - run: ./ppkg info base64 version
      - run: ./ppkg info base64 webpage
      - run: ./ppkg info base64

      - run: ./ppkg depends base64


      - run: ./ppkg install base64


      - run: ./ppkg tree base64
      - run: ./ppkg pack base64

      - run: ./ppkg formula-repo list
      - run: ./ppkg formula view curl


      - run: ./ppkg ls-available
      - run: ./ppkg ls-installed
      - run: ./ppkg ls-outdated

      - run: ./ppkg is-available base64
      - run: ./ppkg is-installed base64
      - run: ./ppkg is-outdated base64 || echo "not outdated"

      - run: ./ppkg uninstall base64

      - run: ./ppkg fetch curl

      - run: ./ppkg upgrade @self
